@model IEnumerable<Category>

@{
    ViewData["Title"] = "Category Management";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Category List</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <i class="bi bi-list-check me-2"></i>Categories
        </div>
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Books</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                            <td>
                                <span class="badge bg-info text-dark">
                                    <i class="bi bi-book me-1"></i> @(category.Books?.Count ?? 0)
                                </span>
                            </td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-sm btn-outline-info" title="Details">
                                        <i class="bi bi-info-circle-fill"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-outline-warning" title="Edit">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    @if (!Model.Any())
    {
        <div class="alert alert-info text-center mt-4">
            <h4><i class="bi bi-exclamation-triangle me-2"></i>No categories found</h4>
            <p>Click 'Create New' to add your first category.</p>
        </div>
    }
</div>
